<div id="salesmen-login">

    <label for="salesmen">Select your name to start a new Purchase Order:</label>
    <br>
    <select name="salesmen" id="salesmen">
        <%@salesmen.each do |s|%>
        <option value=<%=s.name%>><%=s.name%></option>
        <%end%>
    </select>
    <%= button_to "Enter", :controller => "purchase_orders", :action => "new", :method => "get" %>
</div>